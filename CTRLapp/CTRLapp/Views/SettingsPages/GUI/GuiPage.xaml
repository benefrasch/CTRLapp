<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="CTRLapp.Views.SettingsPages.GUI.GuiPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid x:Name="grid" Padding="4" ColumnSpacing="4" RowSpacing="4">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <AbsoluteLayout x:Name="MainLayout" Grid.Column="1" />

            <Frame BackgroundColor="#40404040" CornerRadius="40" Grid.RowSpan="2">
                <StackLayout>

                    <ImageButton x:Name="ExitButton" BackgroundColor="Transparent" Clicked="ExitButtonClicked" Padding="10" CornerRadius="40"
                             Source="{AppThemeBinding Light=arrow_thick_left_light.png, Dark=arrow_thick_left_dark.png}"/>

                    <ListView x:Name="newObjectListView" Grid.Row="1" IsPullToRefreshEnabled="False" SeparatorVisibility="None" SelectionMode="None" ItemTapped="NewObject" RowHeight="80">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="15" />
                                            <RowDefinition Height="30" />
                                            <RowDefinition Height="20" />
                                            <RowDefinition Height="15" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80" />
                                        </Grid.ColumnDefinitions>
                                        <Image Source="{Binding Icon}" Grid.Row="1" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
                                        <Label Text="{Binding Name}" Grid.Row="2" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="#40404040" Grid.Row="1" Grid.Column="1" CornerRadius="40">
                <StackLayout Orientation="Horizontal">
                    <CheckBox x:Name="snapBox" VerticalOptions="Center"/>
                    <Label Text="snap" FontSize="20" VerticalOptions="Center"/>
                </StackLayout>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>