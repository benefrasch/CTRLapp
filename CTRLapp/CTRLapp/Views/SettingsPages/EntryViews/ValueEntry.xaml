<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="CTRLapp.Views.SettingsPages.EntryViews.ValueEntry"
             HorizontalOptions="FillAndExpand">
    <ContentView.Content>
        <StackLayout Padding="0" Spacing="0" x:Name="stack">
            <Label Text="{Binding LabelText}" FontSize="14"/>
            <Entry Text="{Binding EntryText}"/>
        </StackLayout>
  </ContentView.Content>
</ContentView>