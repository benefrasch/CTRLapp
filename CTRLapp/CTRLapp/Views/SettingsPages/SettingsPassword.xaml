<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CTRLapp.Views.SettingsPages.SettingsPassword"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="back" Pressed="BackButtonPressed" HorizontalOptions="Start"/>
            <Label Text="Settings password: " HorizontalOptions="Center"/>
            <Entry x:Name="passowrdEntry" IsPassword="True" Placeholder="Enter Password" HorizontalOptions="Center" WidthRequest="400" Completed="PassowrdEntryCompleted"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>